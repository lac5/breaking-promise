{
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules/**/*"],
    "compilerOptions": {
        "lib": ["ESNext", "dom"],
        "outDir": "lib",
        "removeComments": true,
        "declaration": true,
        "target": "ES6",
        "esModuleInterop": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    }
}